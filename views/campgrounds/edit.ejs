<%- include("../partials/header") %>
<%- include("../partials/navbar")%>
<div class="container">
        <h1 align="center">Edit <%= campgrounds.name%></h1>
        <div style="width: 30%; margin: 5px auto">
    <form action="/campgrounds/<%= campgrounds._id%>?_method=PUT" method="POST">
         <div class="form-group">
                <input type="text" class="form-control" name="campground[name]" value="<%= campgrounds.name%>">
         </div>
		<div class="form-group">
                <input type="number" class="form-control" name="campground[price]" value="<%= campgrounds.price%>" min="500" step="1">
         </div>
         <div class="form-group">
            <input type="text" class="form-control"  name="campground[image]" value="<%= campgrounds.image%>">
         </div>
		<div class="form-group">
            <input type="text" class="form-control"  name="campground[description]" value="<%= campgrounds.description%>">
         </div>
         <div class="form-group">
            <button type="submit" class="btn btn-primary btn-block">Submit</button>
         </div>
         <div class="form-group">
            <button type="submit" class="btn btn-primary btn-block" href="/campgrounds">Go Back</button>
         </div>
    </form>
    </div>

</div>
<%- include("../partials/footer") %>