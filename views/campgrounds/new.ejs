<%- include("../partials/header") %>
<%- include("../partials/navbar")%>
<div class="container">
        <h1 align="center">Add a new campground</h1>
        <div style="width: 30%; margin: 5px auto">
    <form action="/campgrounds" method="POST">
         <div class="form-group">
                <input type="text" class="form-control" name="name" placeholder="Name">
         </div>
		<div class="form-group">
                <input type="number" class="form-control" name="price" placeholder="Price" min="500" step="1">
         </div>
         <div class="form-group">
            <input type="text" class="form-control"  name="image" placeholder="Image url">
         </div>
		<div class="form-group">
            <input type="text" class="form-control"  name="description" placeholder="Image description">
         </div>
         <div class="form-group">
            <button type="submit" class="btn btn-primary btn-block">Submit</button>
         </div>
         <div class="form-group">
            <button type="submit" class="btn btn-primary btn-block" href="/campgrounds">Go Back</button>
         </div>
    </form>
    </div>

</div>
<%- include("../partials/footer") %>