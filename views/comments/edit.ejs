<%- include("../partials/navbar")%>
<h1>Edit your comment</h1>
<div class="container">
        <h1 align="center">Edit your comment</h1>
        <div style="width: 30%; margin: 5px auto">
    <form action="/campgrounds/<%= campground_id %>/comments/<%=comment._id%>?_method=PUT" method="POST">
         <div class="form-group">
                <input type="text" class="form-control" name="comment[text]" value="<%=comment.text %>">
         </div>
         <div class="form-group">
            <button type="submit" class="btn btn-primary btn-block">Submit</button>
         </div>
         <div class="form-group">
            <button type="submit" class="btn btn-primary btn-block" href="/campgrounds">Go Back</button>
         </div>
    </form>
    </div>

</div>
