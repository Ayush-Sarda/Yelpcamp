<%- include("../partials/header") %>
<%- include("../partials/navbar")%>
<h1>Create a new Campground</h1>
<div class="container">
        <h1 align="center">Add new comment to <%= campground.name %></h1>
        <div style="width: 30%; margin: 5px auto">
    <form action="/campgrounds/<%= campground._id %>/comments" method="POST">
         <div class="form-group">
                <input type="text" class="form-control" name="comment[text]" placeholder="Text">
         </div>
         <div class="form-group">
            <button type="submit" class="btn btn-primary btn-block">Submit</button>
         </div>
         <div class="form-group">
            <button type="submit" class="btn btn-primary btn-block" href="/campgrounds">Go Back</button>
         </div>
    </form>
    </div>

</div>
<%- include("../partials/footer") %>